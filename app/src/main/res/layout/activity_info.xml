<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".adminUi.NoteActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_change_info"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue_color">

        <ImageButton
            android:id="@+id/btnback_change_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:background="@color/blue_color"
            android:src="@drawable/btnback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lexenddeca"
            android:text="Thông tin cá nhân"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image_change_info"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/txt_hint"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout_change_info"
        android:layout_marginTop="100dp"/>
    <EditText
        android:id="@+id/ed_name_change_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image_change_info"
        android:layout_margin="20dp"
        android:background="@drawable/bg_ed"
        android:fontFamily="@font/lexenddeca"
        android:hint="Họ tên"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/ed_email_change_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_name_change_info"
        android:layout_margin="20dp"
        android:background="@drawable/bg_ed"
        android:fontFamily="@font/lexenddeca"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btn_change_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/lexenddeca"
        android:text="Chỉnh sửa"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true" />
</RelativeLayout>