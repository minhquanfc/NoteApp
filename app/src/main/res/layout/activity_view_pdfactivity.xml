<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminUi.ViewPDFActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout_viewpdf"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue_color">

        <ImageButton
            android:id="@+id/btnback_viewpdf"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:background="@color/blue_color"
            android:src="@drawable/btnback" />

        <TextView
            android:id="@+id/tv_title_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lexenddeca"
            android:text="PDF"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:maxLines="1"
            android:maxEms="10"
            android:ellipsize="end"/>
    </RelativeLayout>
    <com.github.barteksc.pdfviewer.PDFView
        android:layout_below="@+id/relativeLayout_viewpdf"
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>