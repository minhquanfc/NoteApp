<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/img_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="128dp"
        android:layout_marginRight="42dp"
        android:src="@drawable/vectorlogin1" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note App"
        android:fontFamily="@font/lexenddeca"
        android:layout_below="@+id/img_login"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan what you will do to be more organized for today, tomorrow and beyond"
        android:fontFamily="@font/lexenddeca"
        android:layout_below="@+id/txt"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/btn_login_splash"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/txt2"
        android:text="Login"
        android:textSize="16dp"
        android:fontFamily="@font/lexenddeca"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:textStyle="bold"
        android:layout_marginTop="66dp"
        android:background="@drawable/btn_bg"/>
    <Button
        android:id="@+id/btn_signup_splash"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/btn_login_splash"
        android:text="Sign up"
        android:textSize="16dp"
        android:textColor="@color/blue_color"
        android:background="@drawable/bg_btn_signup"
        android:fontFamily="@font/lexenddeca"
        android:textAllCaps="false"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"/>
</RelativeLayout>